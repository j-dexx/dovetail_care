<div class="form-area">
  <h6>Make an appointment</h6>

  <p class="form-popout-introduction text-center">We'd love to hear from you!</p>

  <%= render 'shared/flash_messages' %>

  <%= render 'contacts/forms/appointment_form' %>

  <div class="form-popout-additional-information">
    <h6>Find Us</h6>

    <div class="form-popout-telephone">
      <%= telephone_link %>
    </div>

    <div class="form-popout-address">
      <%= global_site_settings['Address'].sub(', ', '<br />').html_safe %>
    </div>
  </div>
</div>
