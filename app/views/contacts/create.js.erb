<% unless @contact.form == 'Inpage Contact' %>
  $('.form-area').replaceWith('<%= j render "contacts/sidebars/#{form_partial_helper(@contact.form)}" %>')
  $('.form-area input[type="text"], textarea').val('');
<% else %>
  $('.in-page-form-area').replaceWith('<%= j render "contacts/sidebars/#{form_partial_helper(@contact.form)}" %>')
  $('.in-page-form-area input[type="text"], textarea').val('');
<% end %>
