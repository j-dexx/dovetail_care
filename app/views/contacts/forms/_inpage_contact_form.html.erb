<%= form_for @contact, remote: true do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this form being submitted:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row collapse">
    <div class="small-12 medium-6 columns">
      <div class="field">
        <%= f.label :forename %>
        <%= f.text_field :forename %>
      </div>
    </div>

    <div class="small-12 medium-6 columns">
      <div class="field">
        <%= f.label :surname %>
        <%= f.text_field :surname %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>

  <%= f.hidden_field :form, value: 'Inpage Contact' %>

  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>
<% end %>
