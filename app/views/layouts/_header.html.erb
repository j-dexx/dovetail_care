<section class="form-popout hide">
  <%= link_to '#', class: 'form-popout-close-button toggle-class', title: 'Close', data: { container: '.form-popout', class: 'hide', return: 'false' } do %>
    <%= image_tag 'components/icons/close-button.png', alt: 'Close' %>
  <% end %>

  <div class="form-area">
    Loading...
  </div>
</section>

<section class="faq-popout hide">
  <%= link_to '#',  class: 'faq-popout-close-button toggle-class', title: 'Close', data: { container: '.faq-popout', class: 'hide', return: 'false' } do %>
    Close
  <% end %>

  <div class="faq-navigation">
    <%= link_to '#',  class: 'faq-popout-navigation-button left' do %>
      <
    <% end %>

    <%= link_to '#',  class: 'faq-popout-navigation-button right' do %>
      >
    <% end %>
  </div>

  <div class="faq-popout-content">
    Loading...
  </div>
</section>

<header>
  <%= link_to contact_form_popout_contacts_path, remote: true, class: 'contact-form-popout-button open-sidebar', data: { container: '.form-popout', class: 'hide', return: 'true' } do %>
    <%= image_tag 'components/icons/email.png', alt: '' %>
  <% end %>

  <div class="logo left">
    <%= link_to root_url, title: global_site_settings['Name'] do %>
      <%= image_tag 'layout/header/logo.jpg', alt: global_site_settings['Name'] %>
    <% end %>
  </div>

  <div class="header-telephone right">
    Telephone: <%= telephone_link %>
  </div>

  <%= link_to '#navigation', class: 'toggle-navigation show-for-medium-down toggle-class', title: 'Show navigation', data: { class: 'hide-for-medium-down', container: 'nav', return: 'false '} do %>
    <%= image_tag 'components/icons/burger-menu.png', alt: 'Navigation' %>
  <% end %>

  <nav class="row hide-for-medium-down">
    <div class="small-12 medium-8 columns">
      <ul>
        <%= nested_menu_items(menu_items: @header_menu.menu_items) %>
      </ul>
    </div>
  </nav>
</header>
