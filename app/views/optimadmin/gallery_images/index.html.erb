<%= render 'optimadmin/shared/header/main_title', title: 'Manage Gallery Images' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Gallery Image', object: GalleryImage, path: new_gallery_image_path(home_page_section_id: @home_page_section.id) %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <!--
      <%= render 'optimadmin/shared/module/index/order', options: [['Username', 'username']] %>
    -->
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @gallery_images.size, path: root_url %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-7 small-8' do 'Title' end %>

    <%= list_item 'large-2 hide-for-medium-down' do 'Image' end %>

    <%= list_item { 'View' } %>
    <%= list_item { 'Edit' } %>

    <%= list_item 'large-1 hide-for-medium-down text-center last' do 'Delete' end %>
  </div>

  <div class='module-sortable' data-module="GalleryImage">
    <%= render partial: 'gallery_image', collection: @gallery_images, as: :gallery_image_presenter %>
  </div>
  <%= paginate @gallery_images %>
</div>
